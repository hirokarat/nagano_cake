<h1>Admin::Customers#edit</h1>

<h1><%= f.collection_select :customer_id, @customer, :id, :full_name%>さんの会員詳細</h1>

<p>会員id:<%= @customer.id%></p>


<%= form_with model:@customer, local: true, url: '/admin/customers', method: :post do |f|%>

  <label for="inputName">氏名</label>
  <%= f.text_field:last_name,id:"inputName",placeholder:"姓"%>
  <%= f.text_field:first_name,id:"inputName",placeholder:"名"%>
  
  <label for="inputName_kana">フリガナ</label>
  <%= f.text_field:last_name_kana,id:"inputName_kana",placeholder:"姓カナ"%>
  <%= f.text_field:first_name_kana,id:"inputName_kana",placeholder:"名カナ"%>
  
  <label for="inputPostal_code">郵便番号</label>
  <%= f.text_field:postal_code,id:"inputPostal_code",placeholder:"郵便番号"%>
  
  <label for="inputAddress">住所</label>
  <%= f.text_field:address,id:"inputAddress",placeholder:"住所"%>
  
  <label for="inputTelephon_number">電話番号</label>
  <%= f.text_field:telephone_number,id:"inputTelephon_number",placeholder:"電話番号"%>
  
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field:email,id:"inputEmail",placeholder:"メール"%>
  
  <label for="inputIs_active">会員ステータス</label>
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "有効" %><br />
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "退会" %><br />
  
  <%= f.submit "変更を保存"%>

<%end%>
