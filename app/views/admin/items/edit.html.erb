<h1>Admin::Items#edit</h1>
<%= form_with model:@item, local: true, url: '/admin/items', method: :post do |f|%>
<label for="inputImage">商品画像</label>
<%= f.file_field:image,placeholder:"商品画像",accept:"image/*"%>

<label for="inputName">商品名</label>
<%= f.text_field:name, id:"inputName",placeholder:"商品名"%>

<label for="inputIntroduction">商品説明</label>
<%= f.text_area:introduction,id:"inputIntroduction",placeholder:"商品説明"%>

<label for="inputGenre">ジャンル</label>
<%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]},{ include_blank: '選択してください'} %>

<label for="inputPrice">税抜き価格</label>
<%= f.text_field:price,id:"inputPrice",placeholder:"税抜き価格"%>

<label for="inputIs_active">販売ステータス</label>
<%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中" %><br />
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中" %><br />
  
<%= f.submit "変更を保存"%>
<%end%>