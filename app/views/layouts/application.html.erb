<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <span>Nagano Cake</span>
          </a>
          <div class="navbar navbar-light bg-light" id="navbarNavDropdown">
             <div class="container-fluid">
              <% if customer_signed_in? %>
                <li class="customer-name">
                  ようこそ、<%= current_customer.last_name %> さん
                </li>
                <li class="ml-4">
                  <%= link_to "会員のみなさまへ", public_rule_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4">
                  <%= link_to "マイページ", public_customer_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4">
                  <%= link_to "商品一覧", public_items_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4">
                  <%= link_to "カート", public_cart_items_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4 mr-4">
                  <%= link_to "ログアウト", destroy_public_session_path, method: :delete, class: "btn btn-outline-dark" %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="ml-4">
                  <%= link_to "商品一覧", admin_items_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4">
                  <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4">
                  <%= link_to "注文履歴一覧", admin_orders_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4">
                  <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark" %>
                </li>
                <li class="ml-4 mr-4">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark" %>
                </li>
              <% else %>
                <button class="btn btn-outline-success me-2" type="button">
                  <%= link_to "About", about_path, class: "btn btn-outline-dark" %>
                </button>
                <button class="btn btn-outline-success me-2" type="button">
                  <%= link_to "商品一覧", public_root_path, class: "btn btn-outline-dark" %>
                </button>
                <button class="btn btn-outline-success me-2" type="button">
                  <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark" %>
                </button>
                <button class="btn btn-outline-success me-2" type="button">
                  <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark" %>
                </button>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>
    <main>
      <div id="flash-sentence">
        <% if flash[:notice] %>
          <p class="notice"><%= flash[:notice] %></p>
        <% else %>
          <p class="alert"><%= flash[:alert] %></p>
        <% end %>
      </div>

      <%= yield %>
    </main>
  </body>
</html>
