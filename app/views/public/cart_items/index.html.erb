<div class="container px-5 px-md-0 mt-5">

  <div class="row">
    <div class="col-4">
      <h3 class="d-inline" style="margin-bottom: 0;">ショッピングカート</h3>
    </div>
    <div class="text-end col-8">
    <%= button_to "カートを空にする",public_cart_item_all_destroy_path, method: :delete, class: "btn btn-danger d-inline col-3", "data-confirm" => "カート内の商品を削除してもよろしいですか？"  %>
    </div>
  </div>

  <div class="cart-items-index">
    <table class="mt-5 mb-5 table table-bordered">
      <thead>
        <tr class="table-active">
          <td class="border border-dark col-4">商品名</td>
          <td class="border border-dark col-2">単価(税込)</td>
          <td class="border border-dark col-2">数量</td>
          <td class="border border-dark col-2">小計</td>
          <td class="border border-dark col-2"></td>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr valign="middle">
            <td class="border border-dark " ><%= image_tag cart_item.item.image,size:'150x100'%><%= cart_item.item.name %></td>
            <td class="border border-dark"><%= tax_price(cart_item.item.price).to_formatted_s(:delimited) %></td>
            <td class="border border-dark">
              <%= form_with model: cart_item, url: public_cart_item_path(cart_item),class: "text-center", method: :patch, local: true do |f| %>
                <%= f.number_field :amount, min: 1, max: 10, class: "cart-item-amount-field" %>
                <%= f.submit "変更", class: "btn btn-success ms-3 " %>
              <% end %>
            </td>
            <td class="border border-dark"><%= sub_price(cart_item).to_formatted_s(:delimited) %></td>
            <td class="border border-dark text-center"><%= button_to "削除する",public_cart_item_path(cart_item), method: :delete, class: "btn btn-danger", "data-confirm" => "#{cart_item.item.name}を削除してもよろしいですか？" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">

    <%= link_to "買い物を続ける", public_items_path, class: "col-3 btn btn-primary" %>

    <table class="d-flex justify-content-end  table" >
      <tbody>
        <tr>
          <td class="border border-dark table-active" style="width: 150px; height: 50px">合計金額</td>
          <td class="border border-dark" style="width: 150px; height: 50px"><%= total_price(@cart_items).to_formatted_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row mt-5">
    <%= link_to "情報入力に進む", class: "btn btn-success mx-auto col-3" %>
  </div>

</div>
