<div class="container mt-5">
  <div class="row" style="margin-left: 0; margin-right: 0;">
     <div class="w-100">
    
      <%= form_with model: @order, url:confirm_public_orders_path, class: "offset-md-1", local: true do |f| %>
      <h2 class="ml-4"><strong>注文情報入力</strong></h2>
       <strong>支払方法</strong>
       <div class="col-10 radio ml-3">
        <%= f.radio_button :payment, :"クレジットカード", checked: true %>
        <span>クレジットカード</span>
       </div>
       <div class="col-10 radio ml-3 mb-3">
        <%= f.radio_button :payment, :"銀行振込" %>
        <span>銀行振込</span>
       </div>
    
       <strong>お届け先</strong>
    
       <div class="col-10 radio ml-3">
        <%= f.radio_button :addresses, "residence", checked: true %>
        <span>ご自身の住所</span><br>
        &nbsp;&nbsp;〒<%= current_customer.postal_code%>&nbsp;<%=current_customer.address%><br>
        &nbsp;&nbsp;<%= current_customer.last_name%>&nbsp;<%=current_customer.first_name %>
       </div>
    
       <div class="col-10 radio mt-2">
        <%= f.radio_button :addresses,  "name"%>
        <span>&nbsp登録済住所から選択</span><br>
        <%= f.collection_select(:address_id, @addresses, :id, :address_display,{ prompt: '選択してください' },class:"col-10 ms-3") %>
       </div>
    
       <div class="new-address col-12 radio ml-3 mt-2">
        <%= f.radio_button :addresses, "new_address" %>
        <span>&nbsp新しいお届け先</span><br>
          <div class="field form-group col-md-11 row">
           <%= f.label :"郵便番号（ハイフンなし）",placeholder:"0000000", class: "control-label col-md-3"  %>
           <%= f.text_field :postal_code, class: "col-md-3 form-control-static postal_code" %>
          </div>
          <div class="field form-group col-md-11 row">
           <%= f.label :"住所", class: "control-label col-md-3"  %>
           <%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町0-0", class: "mt-2 col-md-5 form-control-static address" %>
          </div>
          <div class="field form-group col-md-11 row">
           <%= f.label :"宛名", class: "ontrol-label col-md-3"  %>
           <%= f.text_field :name,placeholder:"令和道子", class: "mt-2 col-md-3 form-control-static" %>
          </div>
       </div>
       <div class="text-center">
       <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-lg mt-4 me-5" %>
       </div>
      <% end %>
    
     </div>
  </div>
</div>